{
	"extends": [
		"airbnb",
		"prettier",
		"plugin:import/errors",
		"plugin:import/warnings"
	],
	"plugins": ["prettier", "react-hooks"],
	"settings": {
		"import/resolver": {
			"node": {
				"moduleDirectory": ["node_modules", "src/"]
			}
		}
	},
	"rules": {
		"prettier/prettier": ["error"],
		"react-hooks/rules-of-hooks": "error",
		"react-hooks/exhaustive-deps": "warn"
	}
}
